<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.livace.tim3r.EditEventActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:text="@string/edit_task" />
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Завтрак"
        android:maxLines="1"
        android:textSize="@dimen/text_size_title"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/edit_text_begin_hours"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_begin_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="08"
            android:inputType="number"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/edit_text_begin_minutes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/edit_text_begin_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/edit_text_end_hours" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <EditText
            android:id="@+id/edit_text_end_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="09"
            android:inputType="number"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/edit_text_end_minutes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/edit_text_end_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusDown="@+id/edit_text_end_desc" />

        <!--<EditText-->
            <!--android:id="@+id/text_view_date"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:hint="9 Jan"-->
            <!--android:inputType="date" />-->
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK" />
</LinearLayout>
